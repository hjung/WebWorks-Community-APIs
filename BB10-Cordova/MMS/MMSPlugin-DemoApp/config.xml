<?xml version='1.0' encoding='utf-8'?>
<widget id="community.SMSPlugin.demo" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SMSPlugin</name>
    <description>
        A sample Apache Cordova application that sends an SMS for BlackBerry 10.
    </description>
    <author email="hjung@blackberry.com" href="https://www.github.com/hjung">
        HyunJun Jung - https://www.github.com/hjung
    </author>
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <content src="index.html" />
	<icon src="icons/mms-icon-150x150.png" />
	<icon src="icons/mms-icon-114x114.png" />
	<icon src="icons/mms-icon-86x86.png" />
	<rim:permissions>
	    <rim:permit>access_pimdomain_messages</rim:permit>
	    <rim:permit>access_sms_mms</rim:permit>
	    <rim:permit>access_phone</rim:permit>
	    <rim:permit>access_shared</rim:permit>
	</rim:permissions>
	<rim:splash src="mms-splashscreen-1280x768.png"/>
	<rim:splash src="mms-splashscreen-720x720.png"/>		
</widget>
